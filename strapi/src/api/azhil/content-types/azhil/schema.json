{
  "kind": "collectionType",
  "collectionName": "azhils",
  "info": {
    "singularName": "azhil",
    "pluralName": "azhils",
    "displayName": "Ажил",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "files": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "gender": {
      "type": "enumeration",
      "enum": [
        "эрэгтэй",
        "эмэгтэй",
        "бүгд"
      ],
      "required": true,
      "default": "бүгд"
    },
    "bookedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "bookedJobs"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "createdJobs"
    },
    "profession": {
      "type": "string",
      "required": true
    },
    "locations": {
      "type": "json",
      "required": true
    },
    "additionalMaterial": {
      "type": "text"
    },
    "castTalent": {
      "type": "component",
      "repeatable": false,
      "component": "job-type.cast-talent"
    },
    "influencer": {
      "type": "component",
      "repeatable": false,
      "component": "job-type.influencer"
    },
    "contentCreator": {
      "type": "component",
      "repeatable": false,
      "component": "job-type.content-creator"
    },
    "creativeProduction": {
      "type": "component",
      "repeatable": false,
      "component": "job-type.creative-production"
    },
    "isAdditionalMaterial": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "cast-talent",
        "creative-production",
        "influencer",
        "content-creator"
      ],
      "required": true
    },
    "budget": {
      "type": "string",
      "required": true
    },
    "minAge": {
      "type": "integer",
      "required": false
    },
    "maxAge": {
      "type": "integer"
    },
    "isClosed": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "invitedJobsCount": {
      "type": "integer"
    },
    "invitedUser": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "invitedJobs"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "хүлээгдэж байгаа",
        "татгалзcaн",
        "батлагдсан"
      ],
      "default": "хүлээгдэж байгаа",
      "required": true
    },
    "appliedUsers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "appliedJobs"
    }
  }
}
